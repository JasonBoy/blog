---
const today = new Date();
import SocialIcons from './SocialIcons.astro';
---

<footer>
  <div class="copyright">
    &copy; {today.getFullYear()} Jason Space. All rights reserved.
  </div>
  <div class="social-links">
    <a href="https://twitter.com/jasonlikenfs" target="_blank">
      <span class="sr-only">Follow me on Twitter</span>
      <SocialIcons icon="twitter" size={32} />
    </a>
    <a href="https://github.com/JasonBoy" target="_blank">
      <span class="sr-only">Go to my GitHub profile</span>
      <SocialIcons icon="github" size={32} />
    </a>
  </div>
</footer>
<style>
  footer {
    padding: 2em 1em;
    background: var(--theme-bg-accent);
    color: var(--theme-text-light);
    text-align: center;
    border-top: 1px solid rgba(0, 0, 0, 0.1);
  }
  .copyright {
    color: var(--theme-text-light);
    font-size: 0.95rem;
    margin-bottom: 0.5em;
  }
  .social-links {
    display: flex;
    justify-content: center;
    gap: 1.5em;
    margin-top: 1em;
  }
  .social-links a {
    text-decoration: none;
    color: var(--theme-text-light);
    transition: all 0.2s ease;
    opacity: 0.8;
  }
  .social-links a:hover {
    color: var(--theme-accent);
    opacity: 1;
    transform: translateY(-2px);
  }
</style>
